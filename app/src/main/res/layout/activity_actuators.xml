<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical"
              android:paddingLeft="50dp"
              android:paddingRight="50dp"
              android:paddingTop="20dp" android:onClick="handleToggle">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/seekbarButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorAccent"
        android:fontFamily="monospace"
        android:padding="7dp"
        android:text="THERMOSTAT" />

    <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textView2"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="60"
                android:textSize="18sp"/>

        <SeekBar
                android:id="@+id/thermostatSeekBar"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" android:layout_weight="0.19"/>

        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="85"
                android:textSize="18sp"/>
    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_lights"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorAccent"
        android:fontFamily="monospace"
        android:padding="7dp"
        android:text="LIGHTS" />

    <Switch
            android:id="@+id/lights_kitchen"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Kitchen"
            android:textSize="18sp" android:onClick="handleToggle"/>

    <Switch
            android:id="@+id/lights_livingroom"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Living Room"
            android:textSize="18sp" android:onClick="handleToggle"/>

    <Switch
            android:id="@+id/lights_bedroom"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Bedroom"
            android:textSize="18sp" android:onClick="handleToggle"/>

    <Switch
            android:id="@+id/lights_hall"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Hall"
            android:textSize="18sp" android:onClick="handleToggle"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_windows"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorAccent"
        android:fontFamily="monospace"
        android:padding="7dp"
        android:text="WINDOWS" />

    <Switch
            android:id="@+id/windows_kitchen"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Kitchen"
            android:textSize="18sp" android:onClick="handleToggle"/>

    <Switch
            android:id="@+id/windows_livingroom"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Living Room"
            android:textSize="18sp" android:onClick="handleToggle"/>

    <Switch
            android:id="@+id/windows_bedroom"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Bedroom"
            android:textSize="18sp" android:onClick="handleToggle"/>

    <Switch
            android:id="@+id/windows_hall"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Hall"
            android:textSize="18sp" android:onClick="handleToggle"/>


</LinearLayout>
