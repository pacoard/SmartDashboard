<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="34dp"
    android:paddingRight="34dp"
    android:paddingTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_thermostat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="?attr/colorBackgroundFloating"
        android:fontFamily="monospace"
        android:padding="7dp"
        android:text="THERMOSTAT" />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_lights"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="?attr/colorBackgroundFloating"
        android:fontFamily="monospace"
        android:padding="7dp"
        android:text="LIGHTS" />

    <Switch
        android:id="@+id/lights_kitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kitchen" />

    <Switch
        android:id="@+id/lights_livingroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Living Room" />

    <Switch
        android:id="@+id/lights_bedroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bedroom" />

    <Switch
        android:id="@+id/lights_hall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hall" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_windows"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="?attr/colorBackgroundFloating"
        android:fontFamily="monospace"
        android:padding="7dp"
        android:text="KITCHEN" />

    <Switch
        android:id="@+id/windows_kitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kicthen" />

    <Switch
        android:id="@+id/windows_livingroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Living Room" />

    <Switch
        android:id="@+id/windows_bedroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bedroom" />

    <Switch
        android:id="@+id/windows_Hall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hall" />
</LinearLayout>
